    %script{ :src => "/js/jquery/jquery.nyromodal.js" }
    %script{ :src => "/js/jquery/jquery.tipsy.js" }
    %script{ :src => "/js/jquery/jquery.wysiwyg.js" }
    %script{ :src => "/js/jquery/jquery.datatables.js" }
    %script{ :src => "/js/jquery/jquery.datepicker.js" }
    %script{ :src => "/js/jquery/jquery.fileinput.js" }
    %script{ :src => "/js/jquery/jquery.fullcalendar.min.js" }
    %script{ :src => "/js/jquery/gcal.js" }
    %script{ :src => "/js/jquery/excanvas.js" }
    %script{ :src => "/js/jquery/jquery.visualize.js" }
    %script{ :src => "/js/jquery/jquery.visualize.tooltip.js" }
    %script{ :src => "/js/script.js" }
