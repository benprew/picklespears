!!! strict
%html{ :xmlns => 'http://www.w3.org/1999/xhtml', :lang => 'en' }
  %head
    %meta{ :content => "text/html; charset=ISO-8859-1", 'http-equiv' => "content-type" }
    %title= "Pickle Spears - " + title
    %link{ :rel => "stylesheet", :href => "/stylesheet.css", :type => "text/css" }
    %link{ :rel => "stylesheet", :href => "/grid.css", :type => "text/css" }

  %body
    .header
      %div{ :style => "text-align: right;" }
        %form{ :method => "get", :action => "/search" }
          - if @player
            = "Welcome #{@player.name} | "
            %a{ :href => '/player' } Home
            |
            %a{ :href => '/sign_out' } Logout
          - else
            %a{ :href => '/' } Home
            |
            %a{ :href => '/login' } Login
          %input{ :name => "team", :type => "text" }
          %input{ :name => "tn_search", :value => "Team Search", :type => "submit" }

    - if @errors
      .error= @errors
    - if @messages
      .message= @messages
    .container_12
      = yield
    %script{ :type => 'text/javascript', :src => '/jx.js' }
    %script{ :type => 'text/javascript', :src => '/pickle-spears.js' }
