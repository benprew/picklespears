!!! strict
%html{ :xmlns => 'http://www.w3.org/1999/xhtml', :lang => 'en' }
  %head
    %meta{ :content => "text/html; charset=ISO-8859-1", 'http-equiv' => "content-type" }
    %title= "Pickle Spears - " + title
    %link{ :rel => "stylesheet", :href => "/stylesheet.css", :type => "text/css" }

    /chromatron
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %link{ :rel => "stylesheet", :href => "/css/style.css" }
    %link{ :rel => "stylesheet", :href => "/css/colors.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.tipsy.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.wysiwyg.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.datatables.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.nyromodal.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.datepicker.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.fileinput.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.fullcalendar.css" }
    %link{ :rel => "stylesheet", :href => "/css/jquery.visualize.css" }
    / Google WebFonts
    %link{ :href => 'http://fonts.googleapis.com/css?family=PT+Sans:regular,italic,bold,bolditalic', :rel => 'stylesheet', :type => 'text/css' }
    %script{ :src => "/js/libs/modernizr-1.7.min.js" }
    / end chromatron

    -# for google webmaster tools
    %meta{ :name=>"google-site-verification", :content=>"DKQPrb8YpUIifJ7YdL6-1ckIGNxvAoQoT9E6-fBSv14" }

    -# <!-- Simple OpenID Selector -->
    %link{ :rel => "stylesheet", :href => "/css/openid.css", :type => 'text/css' }
    %script{ :type => 'text/javascript', :src => '/js/date.js' }
    %script{ :type => 'text/javascript', :src => 'http://www.google.com/jsapi' }
    %script{ :type => 'text/javascript' }
      // Load jQuery
      google.load("jquery", "1.5.2");

    - configure :production do
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-12117986-1']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ga);
        })();



  %body
    .fixed-wraper
      %section{ :role => "navigation" }
        %header
          %a{ :href => '/', :title => 'Back to Homepage' }
          %h1 Game scheduler
        - if @player
          %section{ :id => "user-info" }
            %img{ :src => "http://www.gravatar.com/avatar/#{@player.md5_email}", :alt => 'player' }
            %div
              %a{ :href => '/player', :title => 'Account Settings and Profile Page' }= @player.name
              %ul
                %li
                  %a{ :class => "button-link", :href => "/player/logout", :title => "Logout" } Logout
                %li
                  %a{ :class => "button-link", :href => "/player/edit", :title => "Edit" } Edit
        %nav{ :id => "main-nav" }
          %ul
            %li
              %a{ :class => "no-submenu", :href => "/browse?league=Men" } Mens Teams
            %li
              %a{ :class => "no-submenu", :href => "/browse?league=Women" } Womens Teams
            %li
              %a{ :class => "no-submenu", :href => "/browse?league=Coed" } Coed Teams
            %li
              %a{ :class => "no-submenu", :href => "/team/search" } Search
            - if !@player
              %li
                %a{ :class => "no-submenu", :href => "/login" } Login
      %section{ :role => "main" }
        - if !@errors.empty?
          %div{ :class => "notification error" }= @errors.gsub /\n/, "<br />"
        - if !@messages.empty?
          %div{ :class => "notification success" }= @messages
        = yield
    %script{ :type => 'text/javascript', :src => '/jx.js' }
    %script{ :type => 'text/javascript', :src => '/pickle-spears.js' }
    %script{ :src => "//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" }
    :javascript
      !window.jQuery && document.write(unescape('%3Cscript src="/js/jquery/jquery-1.5.1.min.js"%3E%3C/script%3E'))
