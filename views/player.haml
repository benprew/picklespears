- title "#{@player.name}'s homepage"
%div{ :style => 'float: left; padding: 8px' }
  Image of player
  %ul
    %li
      = "Name: #{@player.name} "
      %a{ :href => '' }= '[edit]'
    %li
      = "Email: #{@player.email_address} "
      %a{ :href => '' }= '[edit]'
    %li
      = "Phone: #{@player.phone_number} "
      %a{ :href => '' }= '[edit]'
  %p Teams
  %ul
    - @player.teams.each do |team|
      %li
        %a{ :href => href("/team", { 'team_id' => team.id }) }= team.name
        %img{ :src => '/bullet_delete.png' }
  %a{ :href => "/" } Join a Team
%div{ :style => 'float: left' }
  %h2 Upcoming Games
  %ul
    - (@player.teams.map { |t| t.upcoming_games }).flatten.sort { |a, b| a.date <=> b.date }.each do |game|
      %li
        = game.description
        %div{ :id => "status_#{game.id}" }
          %strong Attending?
          %a{ :href => '#', :onclick => "set_attending_status('#{game.id}', 'yes', 'status_#{game.id}')" } Yes
          %a{ :href => '#', :onclick => "set_attending_status('#{game.id}', 'no', 'status_#{game.id}')" } No
          %a{ :href => '#', :onclick => "set_attending_status('#{game.id}', 'maybe', 'status_#{game.id}')" } Maybe 

